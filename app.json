{
  "expo": {
    "name": "SpiritAmmo",
    "slug": "spiritammo-scripture-mobile-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "spiritammo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.digitalix.spiritammo",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to the microphone for voice recognition and speech training.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to help you practice scripture memorization."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon/foreground.png",
        "backgroundImage": "./assets/images/adaptive-icon/background.png"
      },
      "package": "com.digitalix.spiritammo",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "output": "server",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://digitalix.com/"
        }
      ],
      "./plugins/withGradleProperties",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access the microphone for voice recognition and scripture memorization practice.",
          "speechRecognitionPermission": "Allow $(PRODUCT_NAME) to securely recognize user speech for scripture memorization training.",
          "androidSpeechServicePackages": [
            "com.google.android.googlequicksearchbox"
          ]
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": "https://digitalix.com/"
      },
      "eas": {
        "projectId": "15f1c643-7dd6-4d9d-840f-9f518bfb3484"
      }
    }
  }
}
